  <!-- Reading Progress Bar -->
  <ReadingProgress />

  <Container>
    <!-- Breadcrumbs -->
    <div class="mb-6">
      <Breadcrumbs items={breadcrumbItems} />
    </div>

    <!-- Page Header -->
    <PageHeader 
      title="Theme Test & Component Showcase"
      description="A comprehensive test page to verify all components, themes, colors, and interactions work correctly across different states and configurations."
