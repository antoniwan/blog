        <h3 class="text-lg font-semibold mb-4 text-[rgb(var(--color-text))]">Content Components</h3>
        <div class="space-y-6">
          <!-- Post Cards -->
          <div>
            <span class="text-sm text-[rgb(var(--color-text-muted))] mb-3 block">Post Cards:</span>
