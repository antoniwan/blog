---
import HomeLayout from '../layouts/HomeLayout.astro';
import PostCard from '../components/PostCard.astro';
import CategoryCard from '../components/CategoryCard.astro';
import Container from '../components/Container.astro';
import LazyPosts from '../components/LazyPosts.astro';
import FeaturedWritingsRotator from '../components/FeaturedWritingsRotator.astro';
import { getCollection } from 'astro:content';
import { categories } from '../data/categories';

// Get all posts
const posts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

// Sort posts by date
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Get featured posts (posts marked as featured in frontmatter)
const featuredPosts = sortedPosts.filter((post) => post.data.featured).slice(0, 10);

// Get all remaining posts (excluding featured posts)
const featuredPostIds = featuredPosts.map((post) => post.id);
const remainingPosts = sortedPosts.filter((post) => !featuredPostIds.includes(post.id));

// Get post counts by category
const postCounts = categories.reduce(
  (acc, category) => {
    acc[category.id] = posts.filter((post) => post.data.category?.includes(category.id)).length;
    return acc;
  },
  {} as Record<string, number>,
);

// Get post counts by tag
const tagCounts = posts.reduce(
  (acc, post) => {
    post.data.tags?.forEach((tag) => {
      acc[tag] = (acc[tag] || 0) + 1;
    });
    return acc;
  },
  {} as Record<string, number>,
);

// Get top categories (with most posts)
const topCategories = categories
  .filter((category) => postCounts[category.id] > 0)
  .sort((a, b) => postCounts[b.id] - postCounts[a.id])
  .slice(0, 6);
---

<HomeLayout
  title="Home"
  description="Welcome to Antonio's Notes. I'm Antonio Rodriguez Martinez, and here I share raw reflections on fatherhood, masculinity, culture, and modern life. Explore my thoughts, questions, and dispatches from a mind navigating the complexities of contemporary existence."
  path="/"
  structuredDataType="website"
>
  {/* Hero Section */}
  <Container maxWidth="container" padding="none">
    <div class="py-6 md:py-8 lg:py-12">
      <h1 class="sr-only" transition:name="page-title">
        Welcome to <span class="highlight-primary">Antonio's Notes</span>.
      </h1>
      <p
        class="text-body border-l-2 border-[rgb(var(--color-border))]/40 pl-4 italic leading-relaxed text-[rgb(var(--color-text-muted))]"
        transition:name="page-description"
      >
        Dispatches from a fractured mind navigating fatherhood, masculinity, cultura, and modern
        collapse â€” one burning question at a time.
      </p>
    </div>
  </Container>

  {/* Featured Writings Section */}
  {
    featuredPosts.length > 0 && (
      <Container maxWidth="container" padding="none" class="mb-16 md:mb-20">
        <FeaturedWritingsRotator
          posts={featuredPosts}
          autoRotate={true}
          rotationSpeed={6000}
          showNavigation={true}
        />
      </Container>
    )
  }

  {/* Category Highlights */}
  {
    topCategories.length > 0 && (
      <Container maxWidth="container" padding="none" class="mb-16 md:mb-20">
        <div class="mb-8 md:mb-12">
          <h2 class="text-heading mb-4 text-[rgb(var(--color-text))]">Explore by Category</h2>
        </div>
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 md:gap-8 lg:grid-cols-3">
          {topCategories.map((category, index) => (
            <CategoryCard
              category={category}
              postCount={postCounts[category.id]}
              featured={index < 3}
            />
          ))}
        </div>
      </Container>
    )
  }

  {/* All Posts Section */}
  {
    remainingPosts.length > 0 && (
      <Container maxWidth="container" padding="none">
        <div class="mb-8 md:mb-12">
          <h2 class="text-heading mb-4 text-[rgb(var(--color-text))]">Complete Archive</h2>
          <p class="text-body-large leading-relaxed text-[rgb(var(--color-text-muted))]">
            Every thought, question, and reflection from the journey through thinking, fatherhood,
            and cultural navigation. Scroll to explore the complete collection.
          </p>
        </div>
        <LazyPosts posts={remainingPosts} initialCount={6} loadMoreCount={6} />
      </Container>
    )
  }

  {/* Empty State */}
  {
    posts.length === 0 && (
      <Container maxWidth="container" padding="none" class="py-16 text-center md:py-20">
        <div class="mx-auto max-w-md">
          <div class="mb-6 text-6xl">ðŸ§ </div>
          <h2 class="text-heading mb-4 text-[rgb(var(--color-text))]">The thinking begins soon</h2>
          <p class="text-body-large leading-relaxed text-[rgb(var(--color-text-muted))]">
            Raw reflections on fatherhood, masculinity, cultura, and modern collapse are coming. The
            mind is at work.
          </p>
        </div>
      </Container>
    )
  }
</HomeLayout>

<style>
  /* Enhanced spacing and typography */
  main {
    transition:
      background-color 0.2s ease,
      color 0.2s ease;
  }

  /* Improved line height for better readability */
  .text-lg {
    line-height: 1.7;
  }

  .text-xl {
    line-height: 1.6;
  }

  .text-2xl {
    line-height: 1.5;
  }

  .text-3xl {
    line-height: 1.4;
  }

  /* Enhanced spacing for better visual hierarchy */
  .space-y-8 > * + * {
    margin-top: 2rem;
  }

  .space-y-10 > * + * {
    margin-top: 2.5rem;
  }

  /* Simplified hover transitions */
  .group:hover {
    box-shadow: 0 4px 12px -2px rgb(0 0 0 / 0.15);
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    main {
      transition: none !important;
    }

    * {
      transition: none !important;
    }
  }

  /* Responsive typography adjustments */
  @media (max-width: 768px) {
    .hero-section h1 {
      font-size: var(--font-size-3xl);
    }

    .subtitle {
      font-size: var(--font-size-lg);
    }

    /* Tighter spacing on mobile */
    .space-y-8 > * + * {
      margin-top: 1.5rem;
    }

    .space-y-10 > * + * {
      margin-top: 2rem;
    }

    /* Mobile-specific spacing */
    .mb-16 {
      margin-bottom: 3rem;
    }

    .mb-20 {
      margin-bottom: 4rem;
    }

    /* Tighter category grid on mobile */
    .grid-cols-1 > * {
      margin-bottom: 1rem;
    }
  }
</style>
