---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="404 - Page Not Found"
  description="The page you're looking for doesn't exist or has been moved."
>
  <div class="w-full px-4 md:px-6 lg:px-8 xl:px-12">
    <div class="max-w-container mx-auto">
      <div class="text-center py-12">
        <div class="max-w-md mx-auto">
          <div class="mb-8">
            <div class="text-6xl font-bold text-primary-600 dark:text-primary-400 mb-4">
              404
            </div>
            <h1 class="text-2xl md:text-3xl font-bold text-text dark:text-text-dark mb-4">
              Page Not Found
            </h1>
            <p class="text-lg text-neutral-600 dark:text-neutral-400 mb-8">
              Oops! The page you're looking for doesn't exist or has been moved.
            </p>
          </div>

          <div class="space-y-4">
            <a
              href="/"
              class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors"
            >
              Return Home
            </a>
            
            <div class="text-sm text-neutral-500 dark:text-neutral-500">
              <a href="/category" class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                Browse Categories
              </a>
              <span class="mx-2">â€¢</span>
              <a href="/tag" class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                Explore Tags
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout> 