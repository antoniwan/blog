---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
import BackToHome from '../components/BackToHome.astro';
import { categories } from '../data/categories';
import { getCollection } from 'astro:content';
import LayoutContainer from '../components/LayoutContainer.astro';

// Get recent posts
const posts = await getCollection('blog');
const recentPosts = posts
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 5);

// Get popular categories (using the first 5 categories for now)
const popularCategories = categories.slice(0, 5);
---

<BaseLayout
  title="404 - Page Not Found"
  description="The page you're looking for doesn't exist or has been moved."
  layoutType="default"
  contentWidth="default"
  spacing="comfortable"
>
  <Section padding="section">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-text dark:text-text-dark leading-tight tracking-tight">
      404 - Page Not Found
    </h1>
    <p class="text-xl md:text-2xl text-neutral-600 dark:text-neutral-400 leading-relaxed max-w-2xl mx-auto">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <div class="mt-element">
      <a
        href="/"
        class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
      >
        Return Home
      </a>
    </div>
  </Section>
</BaseLayout>

<style>
	/* Smooth transitions for dark mode */
	main {
		transition: background-color 300ms cubic-bezier(0.4, 0, 0.2, 1),
					color 300ms cubic-bezier(0.4, 0, 0.2, 1);
	}

	/* Respect reduced motion preferences */
	@media (prefers-reduced-motion: reduce) {
		main {
			transition: none !important;
		}
	}
</style> 