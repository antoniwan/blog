---
import BaseLayout from '../layouts/BaseLayout.astro';
import BackToHome from '../components/BackToHome.astro';
---

<BaseLayout title="404 - Page Not Found - StrongVault">
	<main class="max-w-5xl mx-auto px-4 md:px-8 py-12">
		<div class="text-center mb-12">
			<h1 class="text-4xl md:text-5xl font-bold mb-4 text-text dark:text-text-dark">404 - Page Not Found</h1>
			<p class="text-xl text-neutral-600 dark:text-neutral-400">Oops! The page you're looking for doesn't exist or has been moved.</p>
		</div>

		<div class="grid gap-6 md:grid-cols-2">
			<div class="bg-background dark:bg-background-dark p-6 rounded-lg border border-border/20 dark:border-border-dark/20 shadow-sm">
				<h2 class="text-2xl font-semibold mb-4 text-text dark:text-text-dark">Recent Posts</h2>
				<ul class="space-y-3">
					<li>
						<a href="/posts" class="text-primary-500 dark:text-primary-400 hover:underline">View all posts</a>
					</li>
				</ul>
			</div>

			<div class="bg-background dark:bg-background-dark p-6 rounded-lg border border-border/20 dark:border-border-dark/20 shadow-sm">
				<h2 class="text-2xl font-semibold mb-4 text-text dark:text-text-dark">Popular Categories</h2>
				<ul class="space-y-3">
					<li>
						<a href="/category/technology" class="text-primary-500 dark:text-primary-400 hover:underline">Technology</a>
					</li>
					<li>
						<a href="/category/health" class="text-primary-500 dark:text-primary-400 hover:underline">Health</a>
					</li>
					<li>
						<a href="/category/parenting" class="text-primary-500 dark:text-primary-400 hover:underline">Parenting</a>
					</li>
				</ul>
			</div>
		</div>

		<div class="mt-12 text-center">
			<BackToHome />
		</div>
	</main>
</BaseLayout>

<style>
	/* Smooth transitions for dark mode */
	main {
		transition: background-color 300ms cubic-bezier(0.4, 0, 0.2, 1),
					color 300ms cubic-bezier(0.4, 0, 0.2, 1);
	}

	/* Respect reduced motion preferences */
	@media (prefers-reduced-motion: reduce) {
		main {
			transition: none !important;
		}
	}
</style> 