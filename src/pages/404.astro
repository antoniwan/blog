---
import BaseLayout from '../layouts/BaseLayout.astro';
import BackToHome from '../components/BackToHome.astro';
import { categories } from '../data/categories';
import { getCollection } from 'astro:content';

// Get recent posts
const posts = await getCollection('blog');
const recentPosts = posts
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 5);

// Get popular categories (using the first 5 categories for now)
const popularCategories = categories.slice(0, 5);
---

<BaseLayout title="404 - Page Not Found - StrongVault">
	<main class="max-w-5xl mx-auto px-4 md:px-8 py-12">
		<div class="text-center mb-12">
			<h1 class="text-4xl md:text-5xl font-bold mb-4 text-text dark:text-text-dark">404 - Page Not Found</h1>
			<p class="text-xl text-neutral-600 dark:text-neutral-400 mb-8">Oops! The page you're looking for doesn't exist or has been moved.</p>
			
			{/* Search Form */}
			<form class="max-w-md mx-auto mb-12" action="/search" method="GET">
				<div class="relative">
					<input
						type="search"
						name="q"
						placeholder="Search the site..."
						class="w-full px-4 py-3 rounded-lg border border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900 text-text dark:text-text-dark focus:outline-none focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400"
					/>
					<button
						type="submit"
						class="absolute right-2 top-1/2 -translate-y-1/2 p-2 text-primary-500 dark:text-primary-400 hover:text-primary-600 dark:hover:text-primary-300"
					>
						<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
						</svg>
					</button>
				</div>
			</form>
		</div>

		<div class="grid gap-6 md:grid-cols-2">
			{/* Recent Posts Section */}
			<div class="bg-background dark:bg-background-dark p-6 rounded-lg border border-border/20 dark:border-border-dark/20 shadow-sm hover:shadow-md transition-shadow duration-300">
				<h2 class="text-2xl font-semibold mb-4 text-text dark:text-text-dark">Recent Posts</h2>
				<ul class="space-y-3">
					{recentPosts.map(post => (
						<li>
							<a 
								href={`/blog/${post.id}/`} 
								class="text-primary-500 dark:text-primary-400 hover:underline flex items-center gap-2"
							>
								<span class="text-neutral-500 dark:text-neutral-400 text-sm">
									{post.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
								</span>
								{post.data.title}
							</a>
						</li>
					))}
					<li class="mt-4">
						<a href="/blog" class="text-primary-500 dark:text-primary-400 hover:underline font-medium">
							View all posts →
						</a>
					</li>
				</ul>
			</div>

			{/* Categories Section */}
			<div class="bg-background dark:bg-background-dark p-6 rounded-lg border border-border/20 dark:border-border-dark/20 shadow-sm hover:shadow-md transition-shadow duration-300">
				<h2 class="text-2xl font-semibold mb-4 text-text dark:text-text-dark">Popular Categories</h2>
				<ul class="space-y-3">
					{popularCategories.map(category => (
						<li>
							<a 
								href={`/category/${category.id}/`} 
								class="text-primary-500 dark:text-primary-400 hover:underline flex items-center gap-2"
							>
								{category.icon} {category.name}
							</a>
						</li>
					))}
					<li class="mt-4">
						<a href="/categories" class="text-primary-500 dark:text-primary-400 hover:underline font-medium">
							Browse all categories →
						</a>
					</li>
				</ul>
			</div>
		</div>

		<div class="mt-12 text-center">
			<BackToHome />
		</div>
	</main>
</BaseLayout>

<style>
	/* Smooth transitions for dark mode */
	main {
		transition: background-color 300ms cubic-bezier(0.4, 0, 0.2, 1),
					color 300ms cubic-bezier(0.4, 0, 0.2, 1);
	}

	/* Respect reduced motion preferences */
	@media (prefers-reduced-motion: reduce) {
		main {
			transition: none !important;
		}
	}
</style> 