---
import BaseLayout from '../layouts/BaseLayout.astro';
import Container from '../components/Container.astro';
---

<BaseLayout
  title="404 - Page Not Found"
  description="The page you're looking for doesn't exist or has been moved."
>
  <Container>
    <Container maxWidth="container" padding="none">
      <div class="text-center py-12">
        <div class="max-w-md mx-auto">
          <div class="mb-8">
            <div class="text-6xl font-bold text-[rgb(var(--color-primary))] mb-4">
              404
            </div>
            <h1 class="text-2xl md:text-3xl font-bold text-[rgb(var(--color-text))] mb-4">
              Page Not Found
            </h1>
            		<p class="text-body-lg-muted mb-8">
              Oops! The page you're looking for doesn't exist or has been moved.
            </p>
          </div>

          <div class="space-y-4">
            <a
              href="/"
              class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-md text-white bg-[rgb(var(--color-accent))] hover:bg-[rgb(var(--color-accent-hover))] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[rgb(var(--color-accent))] theme-transition"
            >
              Return Home
            </a>
            
            		<div class="text-sm text-body-muted">
              				<a href="/category" class="link">
					Browse Categories
				</a>
				<span class="mx-2">â€¢</span>
				<a href="/tag" class="link">
					Explore Tags
				</a>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </Container>
</BaseLayout> 