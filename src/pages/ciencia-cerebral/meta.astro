---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Container from '../../components/Container.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import LanguageToggle from '../../components/LanguageToggle.astro';
import { getCollection } from 'astro:content';
import { categories } from '../../data/categories';
import { getTagWeight, MASLOW_CATEGORIES } from '../../data/tags';
import { format } from 'date-fns';
import { generateDynamicInsights, calculateObjectiveMetrics, scoreToLetterGrade, letterGradeToColor } from '../../utils/insightGenerator';

// Get all published posts
const posts = await getCollection('blog', ({ data }) => {
	return import.meta.env.PROD ? !data.draft && data.published : true;
});

// Sort posts by date
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Translation data for language toggle
const translationData = {
	translations: [
		{
			id: 'meta-en',
			title: 'Self-Reflection - Brain Science',
			language: ['en'],
			path: '/brain-science/meta'
		},
		{
			id: 'meta-es',
			title: 'Auto-reflexión - Ciencia Cerebral',
			language: ['es'],
			path: '/ciencia-cerebral/meta'
		}
	],
	currentLanguage: 'es',
	currentPath: '/ciencia-cerebral/meta',
	hasTranslations: true
};
---

<BaseLayout
	title="Auto-reflexión - Ciencia Cerebral"
	description="Explora cómo piensas sobre el pensamiento y tu relación con la escritura a través del análisis meta-cognitivo."
	path="/ciencia-cerebral/meta"
	structuredDataType="website"
>
	<Container>
		<Container maxWidth="container" padding="none">
			{/* Breadcrumbs */}
			<div class="mb-4 md:mb-6 hidden md:block">
				<Breadcrumbs 
					items={[
						{ label: "Inicio", href: "/" },
						{ label: "Ciencia Cerebral", href: "/ciencia-cerebral" },
						{ label: "Auto-reflexión" }
					]} 
				/>
			</div>

			<div class="py-4 md:py-6 lg:py-8">
				{/* Language Toggle */}
				<LanguageToggle 
					translations={translationData.translations}
					currentLanguage={translationData.currentLanguage}
					currentPath={translationData.currentPath}
				/>

				{/* Header */}
				<div class="mb-6 md:mb-8 lg:mb-10">
					<h1 class="text-display text-[rgb(var(--color-text))] mb-3 md:mb-4 lg:mb-5" transition:name="page-title">
						🔍 <span class="highlight-primary">Auto-reflexión</span>
					</h1>
					<p class="text-body-large text-[rgb(var(--color-text-muted))] leading-relaxed max-w-4xl" transition:name="page-description">
						Explora cómo piensas sobre el pensamiento y tu relación con la escritura. 
						Análisis meta-cognitivo que revela tu conciencia de tus propios procesos mentales y patrones de pensamiento.
					</p>
				</div>

				{/* Key Metrics */}
				<div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 mb-8 md:mb-10 lg:mb-12">
					<div class="bg-[rgb(var(--color-bg-secondary))] rounded-lg p-4 md:p-6 border border-[rgb(var(--color-border))]">
						<div class="text-xl md:text-2xl font-bold text-[rgb(var(--color-text))] mb-1 md:mb-2">{posts.length}</div>
						<div class="text-xs md:text-sm text-[rgb(var(--color-text-muted))]">Reflexiones</div>
						<div class="text-xs text-blue-500 mt-1">🧠 Base de Datos</div>
					</div>
					<div class="bg-[rgb(var(--color-bg-secondary))] rounded-lg p-4 md:p-6 border border-[rgb(var(--color-border))]">
						<div class="text-xl md:text-2xl font-bold text-[rgb(var(--color-text))] mb-1 md:mb-2">{Math.round((Date.now() - sortedPosts[sortedPosts.length - 1]?.data.pubDate.getTime()) / (1000 * 60 * 60 * 24 * 365))}</div>
						<div class="text-xs md:text-sm text-[rgb(var(--color-text-muted))]">Años de Reflexión</div>
						<div class="text-xs text-green-500 mt-1">⏰ Trayectoria</div>
					</div>
					<div class="bg-[rgb(var(--color-bg-secondary))] rounded-lg p-4 md:p-6 border border-[rgb(var(--color-border))]">
						<div class="text-xl md:text-2xl font-bold text-[rgb(var(--color-text))] mb-1 md:mb-2">{MASLOW_CATEGORIES.length}</div>
						<div class="text-xs md:text-sm text-[rgb(var(--color-text-muted))]">Dimensiones</div>
						<div class="text-xs text-purple-500 mt-1">🌱 Complejidad</div>
					</div>
					<div class="bg-[rgb(var(--color-bg-secondary))] rounded-lg p-4 md:p-6 border border-[rgb(var(--color-border))]">
						<div class="text-xl md:text-2xl font-bold text-[rgb(var(--color-text))] mb-1 md:mb-2">{Math.round(posts.length / Math.max(1, Math.round((Date.now() - sortedPosts[sortedPosts.length - 1]?.data.pubDate.getTime()) / (1000 * 60 * 60 * 24 * 30))))}</div>
						<div class="text-xs md:text-sm text-[rgb(var(--color-text-muted))]">Promedio Mensual</div>
						<div class="text-xs text-orange-500 mt-1">📊 Consistencia</div>
					</div>
				</div>

				{/* Meta-Cognitive Dimensions */}
				<div class="mb-12 md:mb-16">
					<h2 class="text-lg md:text-xl font-semibold text-[rgb(var(--color-text))] mb-6 md:mb-8 flex items-center gap-2">
						<span class="text-[rgb(var(--color-accent))]">🧠</span>
						Dimensiones Meta-Cognitivas
					</h2>
					<p class="text-sm text-[rgb(var(--color-text-muted))] mb-6 md:mb-8 max-w-3xl">
						Diferentes aspectos de tu conciencia sobre tus propios procesos mentales y patrones de pensamiento.
					</p>
					
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
						<div class="bg-[rgb(var(--color-bg-secondary))] rounded-lg p-4 md:p-6 border border-[rgb(var(--color-border))]">
							<div class="flex items-center gap-3 mb-3">
								<span class="text-2xl">🔍</span>
								<h3 class="text-base font-semibold text-[rgb(var(--color-text))]">Conciencia de Proceso</h3>
							</div>
							<p class="text-sm text-[rgb(var(--color-text-muted))] mb-3">
								Tu capacidad de observar y entender cómo piensas, procesas información y llegas a conclusiones.
							</p>
							<div class="text-xs text-[rgb(var(--color-text-muted))]">
								Incluye: Observación de pensamiento, metacognición, autoconciencia
							</div>
						</div>

						<div class="bg-[rgb(var(--color-bg-secondary))] rounded-lg p-4 md:p-6 border border-[rgb(var(--color-border))]">
							<div class="flex items-center gap-3 mb-3">
								<span class="text-2xl">📝</span>
								<h3 class="text-base font-semibold text-[rgb(var(--color-text))]">Relación con la Escritura</h3>
							</div>
							<p class="text-sm text-[rgb(var(--color-text-muted))] mb-3">
								Cómo entiendes y reflexionas sobre tu proceso de escritura y su papel en tu vida.
							</p>
							<div class="text-xs text-[rgb(var(--color-text-muted))]">
								Incluye: Propósito de escritura, proceso creativo, valor personal
							</div>
						</div>

						<div class="bg-[rgb(var(--color-bg-secondary))] rounded-lg p-4 md:p-6 border border-[rgb(var(--color-border))]">
							<div class="flex items-center gap-3 mb-3">
								<span class="text-2xl">🌱</span>
								<h3 class="text-base font-semibold text-[rgb(var(--color-text))]">Evolución del Pensamiento</h3>
							</div>
							<p class="text-sm text-[rgb(var(--color-text-muted))] mb-3">
								Tu conciencia de cómo ha evolucionado tu pensamiento y comprensión a lo largo del tiempo.
							</p>
							<div class="text-xs text-[rgb(var(--color-text-muted))]">
								Incluye: Cambios de perspectiva, crecimiento intelectual, transformación
							</div>
						</div>

						<div class="bg-[rgb(var(--color-bg-secondary))] rounded-lg p-4 md:p-6 border border-[rgb(var(--color-border))]">
							<div class="flex items-center gap-3 mb-3">
								<span class="text-2xl">💜</span>
								<h3 class="text-base font-semibold text-[rgb(var(--color-text))]">Conciencia Emocional</h3>
							</div>
							<p class="text-sm text-[rgb(var(--color-text-muted))] mb-3">
								Tu capacidad de observar y entender tus respuestas emocionales y su influencia en el pensamiento.
							</p>
							<div class="text-xs text-[rgb(var(--color-text-muted))]">
								Incluye: Inteligencia emocional, regulación, autoconciencia afectiva
							</div>
						</div>

						<div class="bg-[rgb(var(--color-bg-secondary))] rounded-lg p-4 md:p-6 border border-[rgb(var(--color-border))]">
							<div class="flex items-center gap-3 mb-3">
								<span class="text-2xl">🎯</span>
								<h3 class="text-base font-semibold text-[rgb(var(--color-text))]">Propósito y Significado</h3>
							</div>
							<p class="text-sm text-[rgb(var(--color-text-muted))] mb-3">
								Tu reflexión sobre el propósito de tu pensamiento y escritura, y su significado personal.
							</p>
							<div class="text-xs text-[rgb(var(--color-text-muted))]">
								Incluye: Sentido de propósito, significado personal, valores
							</div>
						</div>

						<div class="bg-[rgb(var(--color-bg-secondary))] rounded-lg p-4 md:p-6 border border-[rgb(var(--color-border))]">
							<div class="flex items-center gap-3 mb-3">
								<span class="text-2xl">🔄</span>
								<h3 class="text-base font-semibold text-[rgb(var(--color-text))]">Patrones de Reflexión</h3>
							</div>
							<p class="text-sm text-[rgb(var(--color-text-muted))] mb-3">
								Patrones en cómo reflexionas sobre ti mismo y tu proceso de pensamiento.
							</p>
							<div class="text-xs text-[rgb(var(--color-text-muted))]">
								Incluye: Frecuencia de reflexión, profundidad, enfoque
							</div>
						</div>
					</div>
				</div>

				{/* Self-Reflection Insights */}
				<div class="mb-12 md:mb-16">
					<h2 class="text-lg md:text-xl font-semibold text-[rgb(var(--color-text))] mb-6 md:mb-8 flex items-center gap-2">
						<span class="text-[rgb(var(--color-accent))]">💡</span>
						Insights de Auto-reflexión
					</h2>
					<p class="text-sm text-[rgb(var(--color-text-muted))] mb-6 md:mb-8 max-w-3xl">
						Descubrimientos clave sobre tu conciencia de ti mismo y tu proceso de pensamiento.
					</p>
					
					<div class="bg-[rgb(var(--color-bg-secondary))] rounded-lg p-4 md:p-6 border border-[rgb(var(--color-border))]">
						<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
							<div>
								<h3 class="text-base font-semibold text-[rgb(var(--color-text))] mb-3">Niveles de Conciencia</h3>
								<div class="space-y-2 text-sm">
									<div class="flex justify-between items-center">
										<span class="text-[rgb(var(--color-text))]">Proceso Mental:</span>
										<span class="text-[rgb(var(--color-text-muted))]">Alto</span>
									</div>
									<div class="flex justify-between items-center">
										<span class="text-[rgb(var(--color-text))]">Patrones Emocionales:</span>
										<span class="text-[rgb(var(--color-text-muted))]">Moderado</span>
									</div>
									<div class="flex justify-between items-center">
										<span class="text-[rgb(var(--color-text))]">Evolución Personal:</span>
										<span class="text-[rgb(var(--color-text-muted))]">Alto</span>
									</div>
									<div class="flex justify-between items-center">
										<span class="text-[rgb(var(--color-text))]">Propósito:</span>
										<span class="text-[rgb(var(--color-text-muted))]">Claro</span>
									</div>
								</div>
							</div>
							
							<div>
								<h3 class="text-base font-semibold text-[rgb(var(--color-text))] mb-3">Tendencias de Reflexión</h3>
								<div class="space-y-2 text-sm">
									<div class="flex justify-between items-center">
										<span class="text-[rgb(var(--color-text))]">Frecuencia:</span>
										<span class="text-[rgb(var(--color-text-muted))]">Regular</span>
									</div>
									<div class="flex justify-between items-center">
										<span class="text-[rgb(var(--color-text))]">Profundidad:</span>
										<span class="text-[rgb(var(--color-text-muted))]">Variable</span>
									</div>
									<div class="flex justify-between items-center">
										<span class="text-[rgb(var(--color-text))]">Enfoque:</span>
										<span class="text-[rgb(var(--color-text-muted))]">Multidimensional</span>
									</div>
									<div class="flex justify-between items-center">
										<span class="text-[rgb(var(--color-text))]">Evolución:</span>
										<span class="text-[rgb(var(--color-text-muted))]">Progresiva</span>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				{/* Navigation Links */}
				<div class="mt-8 md:mt-12 pt-6 md:pt-8 border-t border-[rgb(var(--color-border))]">
					<div class="flex flex-wrap gap-4 md:gap-6 justify-center">
						<a href="/ciencia-cerebral" class="text-sm text-[rgb(var(--color-accent))] hover:text-[rgb(var(--color-accent-hover))] transition-colors">
							🏠 Volver a Ciencia Cerebral
						</a>
						<a href="/ciencia-cerebral/insights" class="text-sm text-[rgb(var(--color-accent))] hover:text-[rgb(var(--color-accent-hover))] transition-colors">
							💡 Insights Personales
						</a>
						<a href="/ciencia-cerebral/evolution" class="text-sm text-[rgb(var(--color-accent))] hover:text-[rgb(var(--color-accent-hover))] transition-colors">
							📈 Crecimiento Intelectual
						</a>
						<a href="/ciencia-cerebral/topics" class="text-sm text-[rgb(var(--color-accent))] hover:text-[rgb(var(--color-accent-hover))] transition-colors">
							🏷️ Temas Principales
						</a>
						<a href="/ciencia-cerebral/cadence" class="text-sm text-[rgb(var(--color-accent))] hover:text-[rgb(var(--color-accent-hover))] transition-colors">
							📅 Ritmos Creativos
						</a>
						<a href="/ciencia-cerebral/patterns" class="text-sm text-[rgb(var(--color-accent))] hover:text-[rgb(var(--color-accent-hover))] transition-colors">
							🌀 Patrones Ocultos
						</a>
					</div>
				</div>
			</div>
		</Container>
	</Container>
</BaseLayout>
