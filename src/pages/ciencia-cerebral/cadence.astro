import { format, startOfMonth, endOfMonth, eachMonthOfInterval } from 'date-fns';
import { generateDynamicInsights, calculateObjectiveMetrics, scoreToLetterGrade, letterGradeToColor } from '../../utils/insightGenerator';

// Get all published posts
const posts = await getCollection('blog', ({ data }) => {
	return import.meta.env.PROD ? !data.draft && data.published : true;
});

// Sort posts by date
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Calculate metrics
const totalDays = Math.round((Date.now() - sortedPosts[sortedPosts.length - 1]?.data.pubDate.getTime()) / (1000 * 60 * 60 * 24));
const averageMonthly = Math.round(posts.length / Math.max(1, Math.round(totalDays / 30)));
const totalWeeks = Math.round(totalDays / 7);

// Calculate streaks
let currentStreak = 0;
let longestStreak = 0;
let tempStreak = 0;

for (let i = 0; i < sortedPosts.length - 1; i++) {
	const daysDiff = Math.floor((sortedPosts[i].data.pubDate.getTime() - sortedPosts[i + 1].data.pubDate.getTime()) / (1000 * 60 * 60 * 24));
	if (daysDiff <= 7) {
		tempStreak++;
		longestStreak = Math.max(longestStreak, tempStreak);
	} else {
		tempStreak = 0;
	}
}
currentStreak = tempStreak;

// Calculate max gap
let maxGap = 0;
for (let i = 0; i < sortedPosts.length - 1; i++) {
	const gap = Math.floor((sortedPosts[i].data.pubDate.getTime() - sortedPosts[i + 1].data.pubDate.getTime()) / (1000 * 60 * 60 * 24));
	maxGap = Math.max(maxGap, gap);
}

// Translation data for language toggle
