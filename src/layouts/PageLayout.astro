---
import BaseLayout from './BaseLayout.astro';
import PageHeader from '../components/PageHeader.astro';

interface Props {
  title: string;
  description?: string;
  // SEO fields
  path?: string;
  image?: string;
  imageAlt?: string;
  author?: string;
  keywords?: string[];
}

const {
  title,
  description,
  path,
  image,
  imageAlt,
  author,
  keywords,
  ...rest
} = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  path={path}
  image={image}
  imageAlt={imageAlt}
  author={author}
  keywords={keywords}
  {...rest}
>
  <div class="w-full px-4 md:px-6 lg:px-8 xl:px-12">
    <PageHeader title={title} description={description} />
    
    {/* Page Content */}
    <div class="max-w-container mx-auto">
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <slot />
      </div>
    </div>
  </div>
</BaseLayout> 