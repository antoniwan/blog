---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description?: string;
  // SEO fields
  canonicalUrl?: string;
  ogImage?: string;
  ogImageAlt?: string;
  robots?: {
    index?: boolean;
    follow?: boolean;
    noarchive?: boolean;
    nosnippet?: boolean;
    noimageindex?: boolean;
  };
  author?: string;
  keywords?: string[];
}

const {
  title,
  description,
  canonicalUrl,
  ogImage,
  ogImageAlt,
  robots,
  author,
  keywords,
  ...rest
} = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  canonicalUrl={canonicalUrl}
  ogImage={ogImage}
  ogImageAlt={ogImageAlt}
  robots={robots}
  author={author}
  keywords={keywords}
  {...rest}
>
  <div class="max-w-prose-wide mx-auto py-8 md:py-12 lg:py-16">
    {/* Page Header */}
    <div class="mb-12">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-text dark:text-text-dark leading-tight tracking-tight mb-6">
        {title}
      </h1>
      {description && (
        <p class="text-xl md:text-2xl text-neutral-600 dark:text-neutral-400 leading-relaxed">
          {description}
        </p>
      )}
    </div>
    
    {/* Page Content */}
    <div class="prose prose-lg dark:prose-invert max-w-none">
      <slot />
    </div>
  </div>
</BaseLayout> 