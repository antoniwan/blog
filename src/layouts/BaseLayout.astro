        )}
        {(layoutType === 'home' || layoutType === 'category') && (
          <div class="animate-fade-in" transition:animate="fade">
            <slot />
          </div>
        )}
      </LayoutContainer>
    </main>
    
    <Footer />
    <BackToTop />
