---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description?: string;
  container?: 'narrow' | 'default' | 'wide';
  spacing?: 'compact' | 'default' | 'comfortable';
}

const {
  title,
  description,
  container = 'default',
  spacing = 'comfortable',
  ...rest
} = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  layout="home"
  container={container}
  spacing={spacing}
  {...rest}
>
  <slot />
</BaseLayout> 