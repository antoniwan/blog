---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description?: string;
  // SEO fields
  path?: string;
  image?: string;
  imageAlt?: string;
  author?: string;
  keywords?: string[];
}

const {
  title,
  description,
  path,
  image,
  imageAlt,
  author,
  keywords,
  ...rest
} = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  path={path}
  image={image}
  imageAlt={imageAlt}
  author={author}
  keywords={keywords}
  {...rest}
>
  <div class="w-full px-4 md:px-6 lg:px-8 xl:px-12">
    <slot />
  </div>
</BaseLayout> 