---
import TagCard from './TagCard.astro';

interface Props {
	tags: Array<{
		tag: string;
		count: number;
		size?: number;
	}>;
	showCount?: boolean;
	className?: string;
	variant?: 'default' | 'subtle' | 'bordered';
}

const { tags, showCount = true, className = '', variant = 'default' } = Astro.props;
---

<div class={`tag-cloud flex flex-wrap gap-2 justify-center items-center ${className}`}>
	{tags.map(({ tag, count, size }) => (
		<TagCard 
			tag={tag}
			count={count}
			size={size ? (size > 2 ? 'lg' : size > 1 ? 'md' : 'sm') : 'md'}
			variant={variant}
			showCount={showCount}
		/>
	))}
</div>

<style>
	/* Tag cloud container styling */
	.tag-cloud {
		/* Container styles */
	}

	/* Responsive adjustments */
	@media (max-width: 768px) {
		.tag-cloud {
			gap: 0.375rem;
		}
	}
</style> 
