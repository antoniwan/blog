---
interface Props {
  items: {
    label: string;
    href?: string;
  }[];
  class?: string;
}

const { items, class: className = '' } = Astro.props;
---

<nav 
  class:list={['flex items-center space-x-2 text-sm', className]}
  aria-label="Breadcrumb"
>
  <ol class="flex items-center space-x-2">
    {items.map((item, index) => (
      <li class="flex items-center">
        {index > 0 && (
          <svg class="h-4 w-4 text-[rgb(var(--color-text-muted))] mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        )}
        
        {item.href ? (
          <a
            href={item.href}
            class="text-[rgb(var(--color-text-muted))] hover:text-[rgb(var(--color-primary))] theme-transition"
            aria-current={index === items.length - 1 ? 'page' : undefined}
          >
            {item.label}
          </a>
        ) : (
          <span 
            class="text-[rgb(var(--color-text))] font-medium"
            aria-current="page"
          >
            {item.label}
          </span>
        )}
      </li>
    ))}
  </ol>
</nav> 