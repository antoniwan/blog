<div class="reading-progress fixed top-0 left-0 right-0 h-1 bg-primary-500/20 z-50">
	<div class="reading-progress__bar h-full bg-primary-500 transition-transform duration-200 origin-left" style="transform: scaleX(0);"></div>
</div>

<script>
	// Handle reading progress
	const progressBar = document.querySelector('.reading-progress__bar') as HTMLElement;
	
	if (progressBar) {
		const updateProgress = () => {
			const windowHeight = window.innerHeight;
			const documentHeight = document.documentElement.scrollHeight - windowHeight;
			const scrollTop = window.scrollY;
			const progress = scrollTop / documentHeight;
			
			progressBar.style.transform = `scaleX(${progress})`;
		};

		// Update progress on scroll
		window.addEventListener('scroll', () => {
			requestAnimationFrame(updateProgress);
		});

		// Initial progress
		updateProgress();
	}
</script>

<style>
	/* Smooth progress bar transitions */
	.reading-progress__bar {
		transition: transform var(--animation-duration-fast) var(--animation-easing-default);
	}

	/* Hide progress bar when not scrolling */
	.reading-progress {
		opacity: 0;
		transition: opacity var(--animation-duration-fast) var(--animation-easing-default);
	}

	.reading-progress.visible {
		opacity: 1;
	}

	/* Respect reduced motion preferences */
	@media (prefers-reduced-motion: reduce) {
		.reading-progress,
		.reading-progress__bar {
			transition: none !important;
		}
	}
</style> 