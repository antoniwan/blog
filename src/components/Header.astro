---
import Logo from './Logo.astro';
import Navigation from './Navigation.astro';
import ThemeToggle from './ThemeToggle.astro';
import MobileNav from './MobileNav.astro';
---

<header class="sticky top-0 z-40 w-full bg-background/80 dark:bg-background-dark/80 backdrop-blur-sm border-b border-border/20 dark:border-border-dark/20">
	<div class="mx-auto max-w-container px-sm md:px-lg lg:px-xl">
		<div class="flex h-16 items-center justify-between">
			<div class="flex items-center gap-lg">
				<Logo />
				<Navigation class="hidden md:flex" />
			</div>
			
			<div class="flex items-center gap-md">
				<ThemeToggle />
				<MobileNav class="md:hidden" />
			</div>
		</div>
	</div>
</header>

<style>
	/* Smooth transitions for dark mode */
	header {
		transition: background-color 300ms cubic-bezier(0.4, 0, 0.2, 1),
					border-color 300ms cubic-bezier(0.4, 0, 0.2, 1);
	}

	/* Respect reduced motion preferences */
	@media (prefers-reduced-motion: reduce) {
		header {
			transition: none !important;
		}
	}
</style> 