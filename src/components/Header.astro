---
import { SITE_TITLE } from '../consts';
import ThemeToggle from './ThemeToggle.astro';
import Navigation from './Navigation.astro';
import Logo from './Logo.astro';
import LayoutContainer from './LayoutContainer.astro';
---

<header class="sticky top-0 z-50 w-full border-b border-border/20 dark:border-border-dark/20 bg-background/80 dark:bg-background-dark/80 backdrop-blur-sm">
	<LayoutContainer type="container" size="default" padding="md">
		<div class="flex items-center justify-between h-16">
			<div class="flex items-center">
				<Logo size="md" />
			</div>
			
			<div class="flex items-center gap-4">
				<Navigation />
				<ThemeToggle />
			</div>
		</div>
	</LayoutContainer>
</header>

<style>
	/* Smooth transitions for dark mode */
	header {
		transition: background-color 300ms cubic-bezier(0.4, 0, 0.2, 1),
					border-color 300ms cubic-bezier(0.4, 0, 0.2, 1);
	}

	/* Respect reduced motion preferences */
	@media (prefers-reduced-motion: reduce) {
		header {
			transition: none !important;
		}
	}
</style> 