---
import OptimizedImage from './OptimizedImage.astro';

interface Props {
  images: Array<{
    src: string;
    alt: string;
    caption?: string;
  }>;
}

const { images } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 my-8">
  {images.map((image) => (
    <figure class="m-0 p-0">
      <OptimizedImage
        src={image.src}
        alt={image.alt}
        aspectRatio="4/3"
        class="rounded-lg shadow-md"
        width={800}
        height={600}
      />
      {image.caption && (
        <figcaption class="mt-2 text-sm text-gray dark:text-gray-light text-center">
          {image.caption}
        </figcaption>
      )}
    </figure>
  ))}
</div> 