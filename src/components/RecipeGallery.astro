---
interface Props {
  images: Array<{
    src: string;
    alt: string;
    caption?: string;
  }>;
}

const { images } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 my-8">
  {images.map((image) => (
    <figure class="m-0 p-0">
      <img
        src={image.src}
        alt={image.alt}
        class="w-full h-auto rounded-lg shadow-md object-cover"
      />
      {image.caption && (
        <figcaption class="mt-2 text-sm text-gray-600 dark:text-gray-400 text-center">
          {image.caption}
        </figcaption>
      )}
    </figure>
  ))}
</div> 