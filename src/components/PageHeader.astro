---
interface Props {
  title: string;
  description?: string;
  className?: string;
}

const { title, description, className = "" } = Astro.props;
---

<div class={`max-w-container mx-auto py-6 md:py-8 lg:py-12 mb-8 md:mb-12 ${className}`}>
  <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-text dark:text-text-dark leading-tight tracking-tight mb-4 md:mb-6">
    {title}
  </h1>
  {description && (
    <p class="text-lg md:text-xl text-neutral-600 dark:text-neutral-400 leading-relaxed">
      {description}
    </p>
  )}
</div> 