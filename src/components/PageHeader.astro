---
import Container from './Container.astro';

interface Props {
  title: string;
  description?: string;
  className?: string;
  showTitle?: boolean;
}

const { title, description, className = '', showTitle = true } = Astro.props;
---

<Container maxWidth="container" padding="none" class={`py-3 md:py-8 lg:py-12 ${className}`}>
  <div class="space-y-2">
  <h1
      class={`text-display text-[rgb(var(--color-text))]${!showTitle ? ' sr-only' : ''}`}
    transition:name="page-title"
      style="line-height: 1.3; margin: 0;"
  >
    {title}
  </h1>
  {
    description && (
      <p
        class="text-base leading-relaxed text-[rgb(var(--color-text-muted))] md:text-body-large"
        transition:name="page-description"
          style="margin: 0; line-height: 1.6;"
      >
        {description}
      </p>
    )
  }
  </div>
</Container>
