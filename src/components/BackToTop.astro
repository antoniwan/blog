<button
	class="back-to-top fixed bottom-6 right-6 md:bottom-8 md:right-8 flex items-center justify-center w-12 h-12 p-2 bg-primary text-white border-none rounded-full cursor-pointer opacity-0 invisible transition-all duration-300 hover:bg-primary-dark hover:scale-110 focus:outline-2 focus:outline-primary focus:outline-offset-2 z-fixed shadow-lg hover:shadow-xl"
	aria-label="Back to top"
	title="Back to top"
>
	<svg
		class="w-6 h-6 transform transition-transform duration-300 hover:-translate-y-1"
		xmlns="http://www.w3.org/2000/svg"
		width="24"
		height="24"
		viewBox="0 0 24 24"
		fill="none"
		stroke="currentColor"
		stroke-width="2"
		stroke-linecap="round"
		stroke-linejoin="round"
		aria-hidden="true"
	>
		<path d="M18 15l-6-6-6 6" />
	</svg>
</button>

<script>
	// Handle back to top button visibility with smooth fade
	const handleScroll = () => {
		const backToTop = document.querySelector('.back-to-top');
		if (!backToTop) return;

		const scrollPosition = window.scrollY;
		const windowHeight = window.innerHeight;

		if (scrollPosition > windowHeight / 2) {
			backToTop.classList.remove('opacity-0', 'invisible');
			backToTop.classList.add('opacity-100', 'visible');
		} else {
			backToTop.classList.add('opacity-0', 'invisible');
			backToTop.classList.remove('opacity-100', 'visible');
		}
	};

	// Handle back to top button click with smooth scroll
	const handleClick = () => {
		window.scrollTo({
			top: 0,
			behavior: 'smooth'
		});
	};

	// Add event listeners
	document.addEventListener('DOMContentLoaded', () => {
		const backToTop = document.querySelector('.back-to-top');
		if (backToTop) {
			backToTop.addEventListener('click', handleClick);
			window.addEventListener('scroll', handleScroll);
		}
	});
</script> 