---
import type { Category } from '../data/categories';

interface Props {
  category: Category;
  postCount: number;
  featured?: boolean;
  compact?: boolean;
}

const { category, postCount, featured = false, compact = false } = Astro.props;
---

<a
  href={`/category/${category.id}/`}
  class="interactive-card group relative block overflow-hidden"
  class:list={{
    'featured-category': featured,
    'compact-category': compact,
  }}
>

  <!-- Card content -->
  <div class="relative p-6 md:p-8">
    <div class="flex items-start gap-4">
      <!-- Icon -->
      <div class="flex-shrink-0">
        <div
          class="theme-transition flex h-12 w-12 items-center justify-center rounded-xl bg-[rgb(var(--color-accent))]/10 text-2xl md:h-14 md:w-14 md:text-3xl"
        >
          {category.icon}
        </div>
      </div>

      <!-- Content -->
      <div class="min-w-0 flex-1">
        <h3
          class="mb-2 mt-0 text-xl font-semibold leading-tight text-[rgb(var(--color-text))] md:text-2xl"
        >
          {category.name}
        </h3>

        {
          !compact && (
            <p class="text-body-muted mb-3 mt-0 line-clamp-2 text-base leading-relaxed md:text-lg">
              {category.description}
            </p>
          )
        }

        <div class="flex items-center justify-between">
          <span class="text-body-muted text-base font-medium leading-relaxed">
            {postCount}
            {postCount === 1 ? 'writing' : 'writings'}
          </span>
          <span class="font-semibold text-[rgb(var(--color-accent))]">
            â†’
          </span>
        </div>
      </div>
    </div>
  </div>

</a>

<style>
  /* Simplified category card styling */
  a {
    transition: box-shadow 0.2s ease, border-color 0.2s ease;
  }

  /* Simplified featured category styling */
  .featured-category {
    border-color: rgb(var(--color-accent) / 0.2);
    box-shadow: 0 2px 8px -2px rgb(0 0 0 / 0.1);
  }

  /* Compact category styling */
  .compact-category {
    @apply p-4 md:p-6;
  }

  .compact-category .flex-1 {
    @apply space-y-2;
  }

  /* Simplified hover effects */
  .group:hover {
    box-shadow: 0 4px 12px -2px rgb(0 0 0 / 0.15);
    border-color: rgb(var(--color-accent) / 0.2);
  }

  /* Focus states */
  .group:focus {
    outline: 2px solid rgb(var(--color-accent));
    outline-offset: 2px;
    border-radius: 0.75rem;
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    a {
      transition: none !important;
    }

    .group:hover {
      transform: none;
    }
  }

  /* Override global h3 and p margins for category cards */
  h3 {
    margin-top: 0 !important;
  }

  p {
    margin-top: 0 !important;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    /* Adjust icon size for mobile */
    .w-12.h-12 {
      @apply h-10 w-10;
    }

    .text-2xl {
      @apply text-xl;
    }
  }
</style>
