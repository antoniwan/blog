---
import OptimizedVideo from './OptimizedVideo.astro';

interface Props {
  src: string;
  title?: string;
  aspectRatio?: string;
  poster?: string;
}

const { src, title, aspectRatio = '16/9', poster } = Astro.props;
---

<div class="my-8 max-w-full overflow-hidden rounded-lg shadow-md bg-gray-light dark:bg-gray">
  <OptimizedVideo
    src={src}
    title={title}
    aspectRatio={aspectRatio}
    poster={poster}
    controls
  />
</div> 