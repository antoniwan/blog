---
import { SITE_TITLE } from '../consts';
import { mainNavigation } from '../data/navigation';
import Logo from './Logo.astro';
import LayoutContainer from './LayoutContainer.astro';

const currentYear = new Date().getFullYear();

const socialLinks = [
  { href: 'https://bsky.app/profile/antoniwan.online', label: 'BlueSky', icon: 'ðŸ¦‹' },
  { href: 'https://github.com/antoniwan/strongvault', label: 'GitHub', icon: 'ðŸ’»' },
  { href: 'https://www.youtube.com/@Antoniwan777', label: 'YouTube', icon: 'ðŸŽ¥' }
];
---

<footer class="border-t border-border/20 dark:border-border-dark/20 bg-background dark:bg-background-dark">
  <LayoutContainer type="container" size="default" padding="lg">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="space-y-4">
        <Logo size="sm" />
        <p class="text-neutral-600 dark:text-neutral-400">
          Notes on strength, clarity, ritual, and creation â€” one builder's journey through code, craft, and self-mastery.
        </p>
      </div>
      
      <div class="space-y-4">
        <h3 class="text-sm font-semibold text-text dark:text-text-dark uppercase tracking-wider">Navigation</h3>
        <ul class="space-y-2">
          {mainNavigation.map((item) => (
            <li>
              <a 
                href={item.href}
                class="text-neutral-600 dark:text-neutral-400 hover:text-primary-500 dark:hover:text-primary-400 transition-colors"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div class="space-y-4">
        <h3 class="text-sm font-semibold text-text dark:text-text-dark uppercase tracking-wider">Connect</h3>
        <ul class="space-y-2">
          {socialLinks.map((link) => (
            <li>
              <a 
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center text-neutral-600 dark:text-neutral-400 hover:text-primary-500 dark:hover:text-primary-400 transition-colors"
              >
                <span class="mr-2">{link.icon}</span>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-border/20 dark:border-border-dark/20">
      <p class="text-center text-sm text-neutral-600 dark:text-neutral-400">
        Â© {currentYear} {SITE_TITLE}. All rights reserved.
      </p>
    </div>
  </LayoutContainer>
</footer>

<style>
  /* Smooth transitions for dark mode */
  footer {
    transition: background-color 300ms cubic-bezier(0.4, 0, 0.2, 1),
                border-color 300ms cubic-bezier(0.4, 0, 0.2, 1),
                color 300ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    footer {
      transition: none !important;
    }
  }
</style>

<script>
  // Theme toggle functionality
  const themeToggle = document.getElementById('theme-toggle');
  
  themeToggle?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });
</script> 