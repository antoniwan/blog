---
import { SITE_TITLE, SITE_DESCRIPTION, SOCIAL_LINKS } from '../consts';
import Logo from './Logo.astro';
import Container from './Container.astro';
---

<footer 
	class="relative mt-16 md:mt-20 bg-gradient-to-b from-[rgb(var(--color-bg))] to-[rgb(var(--color-bg-alt))] border-t border-[rgb(var(--color-border))]/30 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.05)] theme-transition"
	role="contentinfo"
>
	<!-- Subtle overlay for additional contrast -->
	<div class="absolute inset-0 bg-gradient-to-t from-black/[0.02] to-transparent pointer-events-none"></div>
	
	<Container class="relative py-12 md:py-16">
		<!-- Main Footer Content -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 md:gap-12">
			<!-- Brand Section -->
			<div class="lg:col-span-1">
				<Logo size="xs" />
				<p class="mt-4 text-sm md:text-base text-body-muted">
					{SITE_DESCRIPTION}
				</p>
			</div>
			
			<!-- Quick Links -->
			<div>
				<h3 class="text-base md:text-lg font-semibold mb-4 text-[rgb(var(--color-text))]">Quick Links</h3>
				<nav class="space-y-2" aria-label="Quick navigation">
					<a href="/" class="block text-sm md:text-base link-muted">Home</a>
					<a href="/category/" class="block text-sm md:text-base link-muted">Categories</a>
					<a href="/tag/" class="block text-sm md:text-base link-muted">Tags</a>
					<a href="/about" class="block text-sm md:text-base link-muted">About</a>
				</nav>
			</div>
			
			<!-- Categories -->
			<div>
				<h3 class="text-base md:text-lg font-semibold mb-4 text-[rgb(var(--color-text))]">Categories</h3>
				<nav class="space-y-2" aria-label="Category navigation">
					<a href="/category/parenting/" class="block text-sm md:text-base link-muted">👨‍👩‍👧‍👦 Parenting</a>
					<a href="/category/psychology/" class="block text-sm md:text-base link-muted">🧠 Psychology</a>
					<a href="/category/systems-strategy/" class="block text-sm md:text-base link-muted">💻 Systems & Strategy</a>
					<a href="/category/integration-growth/" class="block text-sm md:text-base link-muted">🧘🏽‍♂️ Integration & Growth</a>
				</nav>
			</div>
			
			<!-- Connect Section -->
			<div>
				<h3 class="text-base md:text-lg font-semibold mb-4 text-[rgb(var(--color-text))]">Connect</h3>
				<nav class="space-y-2" aria-label="Social media links">
					<a href={SOCIAL_LINKS.bluesky} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-sm md:text-base link-muted">
						<span class="text-lg">🌀</span>
						<span>BlueSky</span>
					</a>
					<a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-sm md:text-base link-muted">
						<span class="text-lg">🐙</span>
						<span>GitHub</span>
					</a>
					<a href="https://www.youtube.com/@Antoniwan777" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-sm md:text-base link-muted">
						<span class="text-lg">📺</span>
						<span>YouTube</span>
					</a>
					<a href={SOCIAL_LINKS.buildsSoftware} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-sm md:text-base link-muted">
						<span class="text-lg">💻</span>
						<span>Builds Software</span>
					</a>
				</nav>
			</div>
		</div>
		
		<!-- Copyright Section -->
		<div class="mt-8 md:mt-12 pt-8 md:pt-12 border-t border-[rgb(var(--color-border))]/30">
			<div class="flex flex-col md:flex-row justify-between items-center gap-4">
				<div class="text-xs text-[rgb(var(--color-text-muted))] text-center md:text-left opacity-75">
					<p>© {new Date().getFullYear()} {SITE_TITLE}. All rights reserved. Content: <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" target="_blank" rel="noopener noreferrer">CC BY-NC-SA 4.0</a> Code: <a href="https://opensource.org/licenses/MIT" target="_blank" rel="noopener noreferrer">MIT</a></p>
				</div>
				
				<!-- Additional Links -->
				<div class="flex flex-wrap justify-center md:justify-end gap-4 text-xs text-[rgb(var(--color-text-muted))]">
					<a href="/sitemap.xml" class="link-muted">Sitemap</a>
					<a href="/rss.xml" class="link-muted">RSS</a>
				</div>
			</div>
		</div>
	</Container>
</footer> 