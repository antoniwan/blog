---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Logo from './Logo.astro';
---

<footer 
	class="bg-background dark:bg-background-dark border-t border-border/20 dark:border-border-dark/20 theme-transition"
	role="contentinfo"
>
	<div class="mx-auto max-w-container px-4 md:px-6 py-12 md:py-16">
		<div class="grid grid-cols-1 md:grid-cols-12 gap-6 md:gap-8">
			<!-- Brand Section -->
			<div class="md:col-span-4">
				<Logo size="md" />
				<p class="mt-3 text-sm md:text-base text-neutral-600 dark:text-neutral-400">
					{SITE_DESCRIPTION}
				</p>
			</div>
			
			<!-- Quick Links -->
			<div class="md:col-span-4">
				<h3 class="text-base md:text-lg font-semibold mb-3 text-text dark:text-text-dark">Quick Links</h3>
				<nav class="space-y-1.5" aria-label="Quick navigation">
					<a href="/" class="block text-sm md:text-base text-neutral-600 dark:text-neutral-400 hover:text-primary-500 dark:hover:text-primary-400 theme-transition">Home</a>
					<a href="/category/" class="block text-sm md:text-base text-neutral-600 dark:text-neutral-400 hover:text-primary-500 dark:hover:text-primary-400 theme-transition">Categories</a>
					<a href="/tag/" class="block text-sm md:text-base text-neutral-600 dark:text-neutral-400 hover:text-primary-500 dark:hover:text-primary-400 theme-transition">Tags</a>
					<a href="/about" class="block text-sm md:text-base text-neutral-600 dark:text-neutral-400 hover:text-primary-500 dark:hover:text-primary-400 theme-transition">About</a>
				</nav>
			</div>
			
			<!-- Connect Section -->
			<div class="md:col-span-4">
				<h3 class="text-base md:text-lg font-semibold mb-3 text-text dark:text-text-dark">Connect</h3>
				<nav class="space-y-1.5" aria-label="Social media links">
					<a href="https://bsky.app/profile/antoniwan.online" target="_blank" rel="noopener noreferrer" class="block text-sm md:text-base text-neutral-600 dark:text-neutral-400 hover:text-primary-500 dark:hover:text-primary-400 theme-transition">🌀 BlueSky</a>
					<a href="https://github.com/antoniwan/strongvault" target="_blank" rel="noopener noreferrer" class="block text-sm md:text-base text-neutral-600 dark:text-neutral-400 hover:text-primary-500 dark:hover:text-primary-400 theme-transition">🐙 GitHub</a>
					<a href="https://www.youtube.com/@Antoniwan777" target="_blank" rel="noopener noreferrer" class="block text-sm md:text-base text-neutral-600 dark:text-neutral-400 hover:text-primary-500 dark:hover:text-primary-400 theme-transition">📺 YouTube</a>
				</nav>
			</div>
		</div>
		
		<!-- Copyright Section -->
		<div class="mt-6 md:mt-8 pt-6 md:pt-8 border-t border-border/20 dark:border-border-dark/20">
			<div class="flex flex-col md:flex-row justify-between items-center gap-3">
				<div class="text-xs md:text-sm text-neutral-500 dark:text-neutral-400">
					<p>© {new Date().getFullYear()} {SITE_TITLE}. All rights reserved.</p>
					<p class="mt-1">Content licensed under <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" target="_blank" rel="noopener noreferrer" class="hover:text-primary-500 dark:hover:text-primary-400 theme-transition">CC BY-NC-SA 4.0</a></p>
					<p class="mt-1">Code licensed under <a href="https://opensource.org/licenses/MIT" target="_blank" rel="noopener noreferrer" class="hover:text-primary-500 dark:hover:text-primary-400 theme-transition">MIT License</a></p>
				</div>
			</div>
		</div>
	</div>
</footer> 