---
import { SITE_TITLE } from '../consts';
---

<footer class="footer" role="contentinfo">
	<div class="footer__container">
		<div class="footer__content">
			<div class="footer__info">
				<h2 class="footer__title">{SITE_TITLE}</h2>
				<p class="footer__description">
					A secure and modern password manager for your digital life.
				</p>
			</div>

			<nav class="footer__nav" aria-label="Footer navigation">
				<div class="footer__nav-section">
					<h3 class="footer__nav-title">Product</h3>
					<ul class="footer__nav-links">
						<li class="footer__nav-item">
							<a href="/features" class="footer__link">Features</a>
						</li>
						<li class="footer__nav-item">
							<a href="/pricing" class="footer__link">Pricing</a>
						</li>
						<li class="footer__nav-item">
							<a href="/download" class="footer__link">Download</a>
						</li>
					</ul>
				</div>

				<div class="footer__nav-section">
					<h3 class="footer__nav-title">Company</h3>
					<ul class="footer__nav-links">
						<li class="footer__nav-item">
							<a href="/about" class="footer__link">About</a>
						</li>
						<li class="footer__nav-item">
							<a href="/blog" class="footer__link">Blog</a>
						</li>
						<li class="footer__nav-item">
							<a href="/careers" class="footer__link">Careers</a>
						</li>
					</ul>
				</div>

				<div class="footer__nav-section">
					<h3 class="footer__nav-title">Legal</h3>
					<ul class="footer__nav-links">
						<li class="footer__nav-item">
							<a href="/privacy" class="footer__link">Privacy</a>
						</li>
						<li class="footer__nav-item">
							<a href="/terms" class="footer__link">Terms</a>
						</li>
						<li class="footer__nav-item">
							<a href="/security" class="footer__link">Security</a>
						</li>
					</ul>
				</div>
			</nav>
		</div>

		<div class="footer__bottom">
			<p class="footer__copyright">
				Â© {new Date().getFullYear()} {SITE_TITLE}. All rights reserved.
			</p>
		</div>
	</div>
</footer>

<style>
	.footer {
		background-color: rgb(var(--color-gray-light));
		padding: var(--spacing-xl) 0;
		margin-top: var(--spacing-2xl);
	}

	.footer__container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--spacing-md);
	}

	.footer__content {
		display: grid;
		grid-template-columns: 1fr;
		gap: var(--spacing-xl);
		margin-bottom: var(--spacing-xl);
	}

	.footer__info {
		max-width: 400px;
	}

	.footer__title {
		font-size: var(--font-size-xl);
		margin-bottom: var(--spacing-sm);
	}

	.footer__description {
		color: rgb(var(--color-gray));
		line-height: var(--line-height-relaxed);
	}

	.footer__nav {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: var(--spacing-xl);
	}

	.footer__nav-section {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-sm);
	}

	.footer__nav-title {
		font-size: var(--font-size-base);
		font-weight: 600;
		margin-bottom: var(--spacing-sm);
	}

	.footer__nav-links {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: var(--spacing-sm);
	}

	.footer__nav-item {
		margin: 0;
	}

	.footer__link {
		color: rgb(var(--color-gray));
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.footer__link:hover {
		color: var(--color-primary);
	}

	.footer__bottom {
		border-top: 1px solid rgba(var(--color-gray), 0.1);
		padding-top: var(--spacing-lg);
	}

	.footer__copyright {
		color: rgb(var(--color-gray));
		font-size: var(--font-size-sm);
		text-align: center;
	}

	@media (min-width: 768px) {
		.footer__content {
			grid-template-columns: 1fr 2fr;
		}
	}
</style>
