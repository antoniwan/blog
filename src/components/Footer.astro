---
import { SITE_TITLE, SITE_DESCRIPTION, SOCIAL_LINKS } from '../consts';
import Logo from './Logo.astro';
import Container from './Container.astro';
import pkg from '../../package.json';
---

<footer 
	class="relative mt-16 md:mt-20 bg-gradient-to-b from-[rgb(var(--color-bg))] to-[rgb(var(--color-bg-alt))] border-t border-[rgb(var(--color-border))]/30 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.05)] theme-transition"
	role="contentinfo"
>
	<!-- Subtle overlay for additional contrast -->
	<div class="absolute inset-0 bg-gradient-to-t from-black/[0.02] to-transparent pointer-events-none"></div>
	
	<Container class="relative py-12 md:py-16">
		<!-- Main Footer Content -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 md:gap-12">
			<!-- Brand Section -->
			<div class="lg:col-span-1">
				<Logo size="xs" />
				<p class="mt-4 text-base md:text-lg text-body-muted leading-relaxed">
					{SITE_DESCRIPTION}
				</p>
			</div>
			
			<!-- Quick Links -->
			<div>
				<h3 class="text-lg md:text-xl font-semibold mb-4 text-[rgb(var(--color-text))] leading-tight">Quick Links</h3>
				<nav class="space-y-2" aria-label="Quick navigation">
					<a href="/" class="block text-base md:text-lg link-muted leading-relaxed">Home</a>
					<a href="/category/" class="block text-base md:text-lg link-muted leading-relaxed">Categories</a>
					<a href="/tag/" class="block text-base md:text-lg link-muted leading-relaxed">Tags</a>
					<a href="/about" class="block text-base md:text-lg link-muted leading-relaxed">About</a>
				</nav>
			</div>
			
			<!-- Metadata -->
			<div>
				<h3 class="text-lg md:text-xl font-semibold mb-4 text-[rgb(var(--color-text))] leading-tight">Metadata</h3>
				<nav class="space-y-2" aria-label="Metadata navigation">
					<a href="/tag-management" class="block text-base md:text-lg link-muted leading-relaxed">🏷️ Tag Analytics</a>
					<a href="/brain-science/" class="block text-base md:text-lg link-muted leading-relaxed">🧠 Writing Insights</a>
					<a href="/api/" class="block text-base md:text-lg link-muted leading-relaxed">💬 Public API</a>
				</nav>
			</div>
			
			<!-- Connect Section -->
			<div>
				<h3 class="text-lg md:text-xl font-semibold mb-4 text-[rgb(var(--color-text))] leading-tight">Connect</h3>
				<nav class="space-y-2" aria-label="Social media links">
					<a href={SOCIAL_LINKS.bluesky} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-base md:text-lg link-muted leading-relaxed">
						<span class="text-lg">🌀</span>
						<span>BlueSky</span>
					</a>
					<a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-base md:text-lg link-muted leading-relaxed">
						<span class="text-lg">🐙</span>
						<span>GitHub</span>
					</a>
					<a href="https://www.youtube.com/@Antoniwan777" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-base md:text-lg link-muted leading-relaxed">
						<span class="text-lg">📺</span>
						<span>YouTube</span>
					</a>
					<a href={SOCIAL_LINKS.buildsSoftware} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-base md:text-lg link-muted leading-relaxed">
						<span class="text-lg">💻</span>
						<span>Builds Software</span>
					</a>
				</nav>
			</div>
		</div>
		
		<!-- Copyright Section -->
		<div class="mt-8 md:mt-12 pt-8 md:pt-12 border-t border-[rgb(var(--color-border))]/30">
			<div class="flex flex-col md:flex-row justify-between items-center gap-4">
				<div class="text-sm text-[rgb(var(--color-text-muted))] text-center md:text-left opacity-75 leading-relaxed">
					<p>© {new Date().getFullYear()} {SITE_TITLE}. All rights reserved. Content: <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" target="_blank" rel="noopener noreferrer">CC BY-NC-SA 4.0</a> Code: <a href="https://opensource.org/licenses/MIT" target="_blank" rel="noopener noreferrer">MIT</a></p>
				</div>
				
				<!-- Additional Links -->
				<div class="flex flex-wrap justify-center md:justify-end gap-4 text-sm text-[rgb(var(--color-text-muted))] leading-relaxed">
					<a href="/sitemap-index.xml" class="link-muted">Sitemap</a>
					<a href="/rss.xml" class="link-muted">RSS</a>
					<span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-[rgb(var(--color-primary))]/10 text-[rgb(var(--color-primary))] border border-[rgb(var(--color-primary))]/20">
						v{pkg.version}
					</span>
				</div>
			</div>
		</div>
	</Container>
</footer> 