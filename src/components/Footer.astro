---
import Logo from './Logo.astro';

const currentYear = new Date().getFullYear();

const navigation = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' },
];

const socialLinks = [
  { href: 'https://bsky.app/profile/antoniwan.online', label: 'BlueSky', icon: 'ü¶ã' },
  { href: 'https://github.com/antoniwan/strongvault', label: 'GitHub', icon: 'üíª' },
  { href: 'https://www.youtube.com/@Antoniwan777', label: 'YouTube', icon: 'üé•' }
];
---

<footer 
  class="w-full bg-gradient-to-b from-transparent to-background-alt border-t border-border/20 mt-24 pt-16 pb-12 px-4 md:px-0"
  role="contentinfo"
>
  <div class="max-w-5xl mx-auto">
    <!-- Brand Section -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-16">
      <div class="space-y-6">
        <div class="flex items-center gap-3">
          <Logo size="sm" />
          <span class="text-lg font-serif font-medium text-text">Strong Hands, Soft Heart</span>
        </div>
        <p class="text-text-muted text-sm leading-relaxed max-w-md">
          A digital journal exploring the art of mindful living through code, philosophy, and legacy-building. 
          Where technical precision meets human warmth.
        </p>
      </div>

      <!-- Navigation -->
      <nav class="grid grid-cols-2 gap-8" aria-label="Footer navigation">
        <div>
          <h3 class="text-sm font-medium text-text mb-4">Navigation</h3>
          <ul class="space-y-3">
            {navigation.map(item => (
              <li>
                <a 
                  href={item.href}
                  class="text-sm text-text-muted hover:text-primary-500 transition-colors duration-300 focus-ring"
                >
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
        <div>
          <h3 class="text-sm font-medium text-text mb-4">Connect</h3>
          <ul class="space-y-3">
            {socialLinks.map(item => (
              <li>
                <a 
                  href={item.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-sm text-text-muted hover:text-primary-500 transition-colors duration-300 focus-ring"
                >
                  <span class="text-base" aria-hidden="true">{item.icon}</span>
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </nav>
    </div>

    <!-- Bottom Section -->
    <div class="pt-8 border-t border-border/20">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-xs text-text-muted text-center md:text-left">
          ¬© {currentYear} Strong Hands, Soft Heart LLC. All rights reserved.
        </p>
        <div class="flex items-center gap-4">
          <a 
            href="https://creativecommons.org/licenses/by/4.0/" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-xs text-text-muted hover:text-primary-500 transition-colors duration-300 focus-ring"
          >
            CC BY 4.0
          </a>
          <button
            id="theme-toggle"
            class="p-2 text-text-muted hover:text-primary-500 transition-colors duration-300 focus-ring rounded-full"
            aria-label="Toggle theme"
          >
            <span class="text-base dark:hidden" aria-hidden="true">‚òÄÔ∏è</span>
            <span class="text-base hidden dark:block" aria-hidden="true">üåô</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Enhanced footer transitions */
  footer {
    transition: background-color var(--animation-duration-default) var(--animation-easing-default),
                border-color var(--animation-duration-default) var(--animation-easing-default);
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    footer {
      transition: none !important;
    }
  }
</style>

<script>
  // Theme toggle functionality
  const themeToggle = document.getElementById('theme-toggle');
  
  themeToggle?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });
</script> 