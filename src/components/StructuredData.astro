---
interface Props {
  data: any;
  additionalSchemas?: any[];
}

const { data, additionalSchemas = [] } = Astro.props;

// Combine main structured data with additional schemas
const allSchemas = Array.isArray(data) ? [...data, ...additionalSchemas] : [data, ...additionalSchemas];
---

{allSchemas.map((schema) => (
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />
))} 
