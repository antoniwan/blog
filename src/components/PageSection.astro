---
interface Props {
  /**
   * The title of the section
   */
  title?: string;
  
  /**
   * The description of the section
   */
  description?: string;
  
  /**
   * Whether to center the content
   */
  centered?: boolean;
  
  /**
   * The background color variant
   */
  variant?: 'default' | 'alt' | 'elevated';
  
  /**
   * The vertical padding size
   */
  padding?: 'none' | 'sm' | 'md' | 'lg' | 'xl';
  
  /**
   * Additional classes to apply
   */
  class?: string;
}

const {
  title,
  description,
  centered = false,
  variant = 'default',
  padding = 'lg',
  class: className = ''
} = Astro.props;

const variantClasses = {
  default: 'bg-background dark:bg-background-dark',
  alt: 'bg-background-alt dark:bg-background-alt-dark',
  elevated: 'bg-background-elevated dark:bg-background-elevated-dark'
};

const paddingClasses = {
  none: '',
  sm: 'py-sm',
  md: 'py-md',
  lg: 'py-lg',
  xl: 'py-xl'
};
---

<section
  class:list={[
    variantClasses[variant],
    paddingClasses[padding],
    className
  ]}
>
  <div class="mx-auto max-w-container px-sm md:px-lg lg:px-xl">
    {(title || description) && (
      <div class:list={[
        'mb-xl',
        { 'text-center': centered }
      ]}>
        {title && (
          <h2 class="text-3xl md:text-4xl font-serif font-bold tracking-tight text-text dark:text-text-dark">
            {title}
          </h2>
        )}
        {description && (
          <p class="mt-md text-lg text-neutral-600 dark:text-neutral-400">
            {description}
          </p>
        )}
      </div>
    )}
    <slot />
  </div>
</section>

<style>
  /* Print styles */
  @media print {
    section {
      max-width: none !important;
      padding: 0 !important;
      margin: 0 !important;
    }
  }
</style> 