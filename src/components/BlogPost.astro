---
import type { MarkdownInstance } from 'astro';

interface Props {
  post: MarkdownInstance<Record<string, any>>;
}

const { post } = Astro.props;

// Process the content
const processedContent = post.Content;
---

<article class="prose prose-lg dark:prose-invert mx-auto max-w-[65ch] py-8 px-4">
  {processedContent}
</article>

<style>
  /* Image styles */
  article :global(img) {
    @apply w-full h-auto rounded-lg my-8;
  }
</style> 