---
interface Props {
  /**
   * The vertical padding size
   */
  padding?: 'none' | 'sm' | 'md' | 'lg' | 'section' | 'block';
  
  /**
   * Whether to add a top border
   */
  hasBorder?: boolean;
  
  /**
   * Whether to use an alternate background
   */
  isAlt?: boolean;
  
  /**
   * Additional classes to apply
   */
  class?: string;
}

const {
  padding = 'md',
  hasBorder = false,
  isAlt = false,
  class: className = ''
} = Astro.props;

const paddingMap = {
  none: '',
  sm: 'py-8 md:py-12',
  md: 'py-12 md:py-16',
  lg: 'py-16 md:py-24',
  section: 'py-24 md:py-32',
  block: 'py-16 md:py-20'
};
---

<section
  class:list={[
    paddingMap[padding],
    {
      'border-t border-border/10': hasBorder,
      'bg-background-alt dark:bg-background-alt-dark': isAlt
    },
    className
  ]}
>
  <div class="mx-auto max-w-container px-6 md:px-8">
    <div class="space-y-6">
      <slot />
    </div>
  </div>
</section>

<style>
  /* Print styles */
  @media print {
    section {
      max-width: none !important;
      padding: 0 !important;
      margin: 0 !important;
    }
  }
</style> 