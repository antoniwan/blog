{
  "name": "curious-chaos-journal",
  "type": "module",
  "version": "3.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/antoniwan/curious-chaos-journal.git"
  },
  "homepage": "https://blog.antoniwan.online",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "setup-comments": "node scripts/setup-comments.js",
    "generate-favicons": "node scripts/generate-favicons.js",
    "validate-feeds": "node scripts/validate-feeds.js",
    "audit-frontmatter": "node scripts/audit-frontmatter.js",
    "standardize-frontmatter": "node scripts/standardize-frontmatter.js",
    "remove-legacy-reading-time": "node scripts/remove-legacy-reading-time.js",
    "analyze": "astro build && npx @astrojs/vercel/static-build",
    "lighthouse": "npx lighthouse http://localhost:4321 --output=html --output-path=./lighthouse-report.html",
    "performance": "npm run build && npm run analyze",
    "audit-performance": "npm run build && npx lighthouse http://localhost:4321 --only-categories=performance --output=json --output-path=./performance-audit.json"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.2.6",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.4.2",
    "@astrojs/tailwind": "^6.0.2",
    "@astrojs/vercel": "^8.2.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@vercel/speed-insights": "^1.2.0",
    "astro": "^5.11.0",
    "date-fns": "^4.1.0",
    "js-yaml": "^4.1.0",
    "mdast-util-to-string": "^4.0.0",
    "reading-time": "^1.5.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "terser": "^5.43.1",
    "typescript": "^5.8.3"
  }
}
